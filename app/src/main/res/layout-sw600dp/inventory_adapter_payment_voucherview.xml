<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:id="@+id/tv_paymentVoucherNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:gravity="center"
            android:padding="@dimen/tvpadding"
            android:text="Voucher No"
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_paymentVoucherAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="center"
            android:padding="@dimen/tvpadding"
            android:text="Amount"
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:id="@+id/tv_paymentVoucherReason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/tvpadding"
            android:text="Reason"
            android:textAppearance="?android:textAppearanceSmall" />

        <!--<TextView
            android:id="@+id/tv_paymentVoucherDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.2"
            android:gravity="center"
            android:padding="@dimen/tvpadding"
            android:text="Date"
            android:textAppearance="?android:textAppearanceSmall" />-->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_paymentVoucherEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="@dimen/tvpadding"
                android:textAppearance="?android:textAppearanceSmall" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgviewEdit"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:padding="@dimen/tvpadding"
                    android:src="@drawable/ic_edit"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgviewDelete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:src="@drawable/ic_delete"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgviewPrint"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:src="@drawable/ic_print"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>