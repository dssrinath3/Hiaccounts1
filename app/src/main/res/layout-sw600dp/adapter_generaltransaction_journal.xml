<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/components_margintop"
    android:layout_marginTop="@dimen/components_margintop"
    android:orientation="vertical">


    <EditText

        android:id="@+id/edAccountName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="1dp"
        android:paddingLeft="@dimen/ed_paddingleft"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layoutmargin"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debit Amount"
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/edDebitAmount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="@dimen/layoutmargin"
                android:background="@color/colorWhite"
                android:digits=".0123456789"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/ed_paddingleft"
                android:textAppearance="?android:textAppearanceMedium"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/layoutmargin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Amount"
                android:textAppearance="?android:textAppearanceMedium" />


            <EditText
                android:id="@+id/edCreditAmount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="@dimen/layoutmargin"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:digits=".0123456789"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/ed_paddingleft"
                android:textAppearance="?android:textAppearanceMedium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/layoutmargin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/edDescription1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_height"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="@dimen/layoutmargin"
                android:background="@color/colorWhite"
                android:inputType="text"
                android:paddingLeft="@dimen/ed_paddingleft"
                android:textAppearance="?android:textAppearanceMedium" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>