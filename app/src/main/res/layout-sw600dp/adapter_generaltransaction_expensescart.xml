<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_marginBottom="@dimen/components_margintop">


    <LinearLayout
        android:layout_margin="2dp"
        android:background="@color/colorGrey"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvActName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Account Name"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Description"
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/edDescription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_height"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:textAppearance="?android:textAppearanceMedium" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Invoice No."
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/edInoviceNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_height"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:textAppearance="?android:textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Tax"
                android:textAppearance="?android:textAppearanceMedium" />

            <Spinner
                android:id="@+id/spinnerTax"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_height"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_style"
                android:textAppearance="?android:textAppearanceMedium" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/components_margintop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Amount (Ex)"
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:inputType="numberDecimal"
                android:digits=".0123456789"
                android:text="0.00"
                android:id="@+id/edAmtExTax"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_height"
                android:layout_marginTop="1dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:textAppearance="?android:textAppearanceMedium" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Tax Amount"
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/edTax"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_height"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/colorGrey"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="0.00"
                android:textAppearance="?android:textAppearanceMedium" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Amount (In)"
                android:textAppearance="?android:textAppearanceMedium" />

            <EditText
                android:id="@+id/edAmountInTax"
                android:layout_width="match_parent"
                android:layout_height="@dimen/component_height"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/colorGrey"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="0.00"
                android:textAppearance="?android:textAppearanceMedium" />

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>