<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llPageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/llBottomLayout"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">


                <EditText
                    android:id="@+id/edCalender"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/component_height"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:drawableRight="@drawable/ic_calender"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="@dimen/ed_paddingleft"
                    android:paddingRight="10dp"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/tvAccount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Select Account"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/components_margintop"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Memo"
                    android:textAppearance="?android:textAppearanceMedium" />


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/component_height"
                    android:layout_weight="1"
                    android:background="@color/colorWhite">

                    <EditText
                        android:id="@+id/edMemo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/component_height"

                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingLeft="@dimen/ed_paddingleft"
                        android:textAppearance="?android:textAppearanceMedium" />


                </RelativeLayout>

            </LinearLayout>

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/components_margintop"
                android:dividerHeight="0dp"
                android:scrollbars="none"></ListView>

        </LinearLayout>


        <LinearLayout

            android:visibility="gone"
            android:id="@+id/llBottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layoutmargin"
                android:layout_marginRight="@dimen/layoutmargin"
                android:layout_marginTop="@dimen/layoutmargin"
                android:background="@color/colorGrey"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Total Debit"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorBlack" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/edTotalDebit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/component_height"
                    android:layout_weight="1"
                    android:background="@color/colorGrey"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="@dimen/ed_paddingleft"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layoutmargin"
                android:layout_marginRight="@dimen/layoutmargin"
                android:layout_marginTop="@dimen/layoutmargin"
                android:background="@color/colorGrey"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Total Credit"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorBlack" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/edTotalCredit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/component_height"
                    android:layout_weight="1"
                    android:background="@color/colorGrey"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="@dimen/ed_paddingleft"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layoutmargin"
                android:layout_marginRight="@dimen/layoutmargin"
                android:layout_marginTop="@dimen/layoutmargin"
                android:background="@color/colorGrey"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Out of Balance"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorBlack" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary" />

                <EditText
                    android:id="@+id/edOutofBalance"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/component_height"
                    android:layout_weight="1"
                    android:background="@color/colorGrey"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:paddingLeft="@dimen/ed_paddingleft"
                    android:textAppearance="?android:textAppearanceMedium" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layoutmargin"
                android:layout_marginRight="@dimen/layoutmargin"
                android:layout_marginTop="@dimen/layoutmargin"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:weightSum="2">


                <TextView
                    android:id="@+id/tvSave"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Save"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorWhite" />


                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite" />

                <TextView
                    android:id="@+id/tvClearAll"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Clear"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

    <com.rey.material.widget.ProgressView

        android:id="@+id/progress_bar"
        android:layout_width="@dimen/progreeview_width"
        android:layout_height="@dimen/progreeview_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressMode="indeterminate"
        app:pv_progressStyle="@style/Material.Drawable.CircularProgress" />

    <TextView
        android:id="@+id/tvTryagain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/pleaseTryAgain"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:visibility="gone" />


</RelativeLayout>