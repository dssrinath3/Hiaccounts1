<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:orientation="vertical">


    <ScrollView

        android:background="@color/colorGrey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/component_height"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Account Name"
                            android:textAppearance="?android:textAppearanceSmall" />

                        <EditText
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/edAccountName"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorGrey"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:imeOptions="actionNext"
                            android:padding="1dp"
                            android:textAppearance="?android:textAppearanceSmall" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/component_height"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Description"
                            android:textAppearance="?android:textAppearanceSmall" />

                        <EditText
                            android:paddingLeft="10dp"
                            android:background="@color/colorWhite"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/edAccountDescritpion"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:imeOptions="actionNext"
                            android:textAppearance="?android:textAppearanceSmall" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/component_height"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Invoice Number"
                            android:textAppearance="?android:textAppearanceSmall" />

                        <EditText
                            android:paddingLeft="10dp"
                            android:background="@color/colorWhite"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/edInoviceNumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:textAppearance="?android:textAppearanceSmall" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/component_height"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Amount (Ex Tax)"
                            android:textAppearance="?android:textAppearanceSmall" />

                        <EditText
                            android:background="@color/colorWhite"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/edActAmtExTax"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:imeOptions="actionNext"
                            android:text="0"
                            android:inputType="numberDecimal"
                            android:digits=".0123456789"
                            android:paddingLeft="10dp"
                            android:textAppearance="?android:textAppearanceSmall" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/component_height"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Tax"
                            android:textAppearance="?android:textAppearanceSmall" />

                        <Spinner
                            android:id="@+id/spinActtax"
                            style="@style/spinner_style"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/ed_paddingleft"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tvTaxType"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/component_height"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textAppearance="?android:textAppearanceSmall" />

                        <EditText
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/edTaxTypeAmount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorGrey"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:imeOptions="actionNext"
                            android:text="0.00"
                            android:textAppearance="?android:textAppearanceSmall" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/component_height"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Tax Amount"
                            android:textAppearance="?android:textAppearanceSmall" />

                        <EditText
                            android:paddingLeft="10dp"
                            android:id="@+id/edTaxamt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorGrey"
                            android:digits=".0123456789"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:text="0.00"
                            android:textAppearance="?android:textAppearanceSmall" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/component_height"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Amount (Inc Tax)"
                            android:textAppearance="?android:textAppearanceSmall" />

                        <EditText
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/edActAmtIncTax"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorGrey"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:text="0.00"
                            android:textAppearance="?android:textAppearanceSmall" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/component_height"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Serialize Number"
                            android:textAppearance="?android:textAppearanceSmall" />

                        <Spinner
                            android:id="@+id/spinItemSerialNumber"
                            style="@style/spinner_style"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/ed_paddingleft"
                            android:textAppearance="?android:textAppearanceSmall" />


                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <com.rey.material.widget.ProgressView

                android:id="@+id/progress_bar"
                android:layout_width="@dimen/progreeview_width"
                android:layout_height="@dimen/progreeview_width"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:visibility="gone"
                app:pv_autostart="true"
                app:pv_circular="true"
                app:pv_progressMode="indeterminate"
                app:pv_progressStyle="@style/Material.Drawable.CircularProgress" />

        </FrameLayout>
    </ScrollView>




    <LinearLayout
        android:id="@id/llBottomView"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/components_margintop"
        android:background="@color/colorPrimary"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/components_margintop">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/component_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/close"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/component_height"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@+id/btnClose"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="3dp"
            android:text="Add Account"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorWhite" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/components_margintop"></View>
    </LinearLayout>
</RelativeLayout>