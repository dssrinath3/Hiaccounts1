<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_listtitle"
        android:layout_below="@+id/ed_searchitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_gravity="center"
            android:padding="@dimen/tvpadding"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_itemname"
            android:text="Item"
            android:textAppearance="?android:textAppearanceSmall"
            />

        <TextView
            android:id="@+id/tv_itemunitprice"
            android:layout_gravity="center"
            android:padding="@dimen/tvpadding"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Unit Price"
            android:textAppearance="?android:textAppearanceSmall"
            />
        <TextView
            android:id="@+id/tv_itemquantity"
            android:layout_gravity="center"
            android:padding="@dimen/tvpadding"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Unit"
            android:textAppearance="?android:textAppearanceSmall"
            />
        <TextView
            android:id="@+id/tv_itemtotalamount"
            android:layout_gravity="center"
            android:padding="@dimen/tvpadding"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Total Amount"
            android:textAppearance="?android:textAppearanceSmall"
            />

        <TextView
            android:id="@+id/tv_itemtaxtypename"
            android:layout_gravity="center"
            android:padding="@dimen/tvpadding"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="?android:textAppearanceSmall"
            />


    </LinearLayout>

</RelativeLayout>