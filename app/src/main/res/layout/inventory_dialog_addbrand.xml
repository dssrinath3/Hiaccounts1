<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorGrey">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp"
                android:background="@color/colorGrey">


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/component_height"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageview_close"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ed_paddingleft"
                    android:text="@string/inventory_addcategory"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/colorBlack" />

                <ImageView
                    android:id="@+id/imagwviewClose"
                    android:layout_width="@dimen/imageview_iconwidth"
                    android:layout_height="@dimen/imageview_iconheight"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:src="@drawable/ic_close" />

            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_header"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/llCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView

                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/tvpadding"
                android:text="@string/inventory_categoryname"
                android:textAppearance="?android:textAppearanceSmall" />

            <EditText


                android:id="@+id/edCategoryName"
                android:layout_width="0dp"
                android:layout_height="@dimen/component_height"
                android:layout_weight="1"
                android:background="@color/colorWhite"
               android:gravity="center_vertical"
                android:paddingLeft="@dimen/ed_paddingleft"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:id="@+id/llCategoryDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view1"
            android:layout_below="@+id/llCategoryName"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView

                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/tvpadding"
                android:text="@string/inventory_categorydescription"
                android:textAppearance="?android:textAppearanceSmall" />

            <EditText
                android:id="@+id/edCategoryDescription"
                android:layout_width="0dp"
                android:layout_height="@dimen/component_height"
                android:layout_weight="1"
                android:background="@color/colorWhite"
               android:gravity="center_vertical"
                android:paddingLeft="@dimen/ed_paddingleft"
                android:textAppearance="?android:textAppearanceSmall" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/ll1"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/component_height"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@color/colorButton"
                android:padding="@dimen/tvpadding"
                android:text="@string/save"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/component_height"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@color/colorButton"
                android:padding="@dimen/tvpadding"
                android:text="@string/close"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </RelativeLayout>

    <com.rey.material.widget.ProgressView

        android:id="@+id/progress_bar"
        android:layout_width="@dimen/progreeview_width"
        android:layout_height="@dimen/progreeview_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressMode="indeterminate"
        app:pv_progressStyle="@style/Material.Drawable.CircularProgress" />
</FrameLayout>