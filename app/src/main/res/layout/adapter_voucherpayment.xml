<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    >



    <EditText
        android:layout_weight="1.20"
        android:imeOptions="actionDone"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_centerVertical="true"
        android:id="@+id/ed_vouchernumber"
        android:singleLine="true"
        android:layout_width="0dp"
        android:layout_height="@dimen/component_height"
        android:hint="@string/voucher_number"
        android:padding="@dimen/layoutmargin"
        android:background="@color/colorWhite"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText

        android:id="@+id/ed_voucheramount"
        android:layout_width="0dp"
        android:layout_height="@dimen/component_height"
        android:layout_marginLeft="@dimen/layoutmargin"
        android:layout_marginRight="@dimen/layoutmargin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_toLeftOf="@+id/imageview_voucherremove"
        android:layout_toRightOf="@+id/ed_vouchernumber"
        android:layout_weight="1.20"
        android:background="@color/colorWhite"
        android:digits="1234567890."
        android:hint="@string/card_amount"
        android:imeOptions="actionDone"
        android:inputType="numberDecimal"
        android:paddingLeft="@dimen/layoutmargin"
        android:singleLine="true"
        android:textAppearance="?android:textAppearanceSmall"

        />


    <LinearLayout
        android:layout_weight="0.60"
        android:layout_width="0dp"
        android:layout_height="match_parent">


        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_minus"
            android:layout_marginRight="5dp"
            android:id="@+id/imageview_voucherremove"
            android:layout_toLeftOf="@+id/imageview_voucheradd"
            />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_plus"
            android:layout_alignParentRight="true"
            android:id="@+id/imageview_voucheradd" />



    </LinearLayout>
</LinearLayout>