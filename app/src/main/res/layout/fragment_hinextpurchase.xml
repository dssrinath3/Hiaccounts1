        <com.github.clans.fab.FloatingActionMenu
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:id="@+id/fabMenus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:menu_animationDelayPerItem="0"
            fab:menu_colorNormal="@color/colorPrimary"
            fab:menu_colorPressed="@color/colorPrimary"
            fab:menu_colorRipple="@color/colorPrimary"
            fab:menu_icon="@drawable/ic_plus_white"
            fab:menu_labels_hideAnimation="@anim/jump_to_down"
            fab:menu_labels_showAnimation="@anim/jump_from_down"
            fab:menu_labels_style="@style/MenuLabelsStyle"
            fab:menu_shadowColor="#444"
            android:visibility="gone">


            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabclearall"
                style="@style/MenuButtonsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_clearall"
                fab:fab_label="@string/fabclearall" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabsupplierpayment"
                style="@style/MenuButtonsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_supplierpayment"
                fab:fab_label="@string/fabsupplierpayment" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabadvancepayment"
                style="@style/MenuButtonsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_puradvancepaymnetlist"
                fab:fab_label="@string/fabadvancepaymenlist" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabcreditnote"
                style="@style/MenuButtonsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_invokepurchasorder"
                fab:fab_label="@string/fabCreditNote" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabInvokePurchaseOrder"
                style="@style/MenuButtonsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_invokepurchasorder"
                fab:fab_label="@string/fabinokepurchaseorder" />


            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabsavepurchaseorder"
                style="@style/MenuButtonsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_savepurchaseorder"
                fab:fab_label="@string/fabsavepurchaseorder" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabsavequotation"
                style="@style/MenuButtonsStyle"
                android:layout_width="wrap_content"
