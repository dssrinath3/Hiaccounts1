                android:src="@drawable/fab_purprintlist"
                fab:fab_label="@string/fabprintlist" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabsavereceiveitem"
                style="@style/MenuButtonsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fab_savepurchaseorder"
                fab:fab_label="@string/fabsaverecieveitem" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabinvokereceiveitem"
                style="@style/MenuButtonsStyle"
