<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/components_margintop"
                android:background="@color/colorGrey">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/llSupplierInvoiceNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layoutmargin"
                        android:layout_marginRight="@dimen/layoutmargin"
                        android:layout_weight="2"
                        android:orientation="horizontal">



                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Supplier Invoice No."
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edSupplierInvNo"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/component_height"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/colorWhite"
                            android:imeOptions="actionNext"
                            android:paddingLeft="@dimen/paddingmargin"
                            android:singleLine="true"
                            android:textAppearance="?android:textAppearanceSmall" />







                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="@dimen/components_margintop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layoutmargin"
                        android:layout_marginRight="@dimen/layoutmargin"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Total"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/ed_totalamount"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/component_height"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@color/colorCheckbox"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:imeOptions="actionNext"
                                android:paddingLeft="@dimen/paddingmargin"
                                android:singleLine="true"
                                android:text="0.00"
                                android:textAppearance="?android:textAppearanceSmall" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Discount"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />

                            <EditText

                                android:id="@+id/ed_totaldiscount"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/component_height"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:digits="0123456789."
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:paddingLeft="@dimen/paddingmargin"
                                android:singleLine="true"
                                android:text="0.00"
                                android:textAppearance="?android:textAppearanceSmall" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layoutmargin"
                        android:layout_marginRight="@dimen/layoutmargin"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/paddingmargin"
                                android:text="Amount Tendered"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/ed_tenderedamt"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/component_height"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@color/colorCheckbox"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:paddingLeft="@dimen/paddingmargin"
                                android:text="0.00"
                                android:textAppearance="?android:textAppearanceSmall" />


                        </LinearLayout>


                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/paddingmargin"
                                android:text="Amount Returned"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/ed_returnamount"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/component_height"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@color/colorCheckbox"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:imeOptions="actionNext"
                                android:paddingLeft="@dimen/paddingmargin"
                                android:singleLine="true"
                                android:text="0.00"
                                android:textAppearance="?android:textAppearanceSmall" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:background="@color/colorPrimary" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/component_height"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/chbx_cash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cash"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack" />


                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/chbx_card"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/card"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack" />


                        </LinearLayout>

                        <LinearLayout
                            android:visibility="gone"

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/chbx_voucher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/voucher"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/c_email"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/components_margintop"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/paddingmargin"
                                android:text="Email Id"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack" />


                            <EditText
                                android:id="@+id/ed_emailid"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/component_height"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="@dimen/ed_paddingleft"
                                android:singleLine="true"
                                android:textAppearance="?android:textAppearanceSmall" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_cashlayuout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_cashicon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/icon_cash"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorButton" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/layoutmargin"
                                android:text="@string/cash_payment"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/components_margintop"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:padding="@dimen/paddingmargin"
                                android:text="@string/amount_tendered"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack" />


                            <EditText
                                android:id="@+id/ed_cashamounttendered"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/component_height"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:digits="0123456789."
                                android:hint="0"
                                android:imeOptions="actionNext"
                                android:inputType="numberDecimal"
                                android:paddingLeft="@dimen/paddingmargin"
                                android:singleLine="true"
                                android:textAppearance="?android:textAppearanceSmall" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_cardlayuout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_cardicon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/icon_cash"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorButton" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/paddingmargin"
                                android:text="@string/card_payment"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <in.hiaccounts.utility.NonScrollListView
                            android:id="@+id/nonscrolllistview_credit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"

                            >

                        </in.hiaccounts.utility.NonScrollListView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_vopucherlayuout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/components_margintop"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_voicon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/icon_cash"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorButton" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/paddingmargin"
                                android:text="@string/voucher_payment"
                                android:textAppearance="?android:textAppearanceSmall"
                                android:textColor="@color/colorBlack"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <in.hiaccounts.utility.NonScrollListView
                            android:id="@+id/nonscrolllistview_voucher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="@dimen/components_margintop"></in.hiaccounts.utility.NonScrollListView>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/ll_bottomlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/component_height"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <Button

                            android:id="@+id/btn_saveprint"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_toLeftOf="@+id/btn_saveemail"
                            android:layout_weight="1"
                            android:background="@color/colorButton"
                            android:paddingLeft="@dimen/paddingmargin"
                            android:paddingRight="@dimen/paddingmargin"
                            android:text="@string/saveprint"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/colorWhite" />


                        <Button
                            android:id="@+id/btn_saveemail"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_toLeftOf="@+id/btn_cancel"
                            android:background="@color/colorButton"
                            android:paddingLeft="@dimen/paddingmargin"
                            android:paddingRight="@dimen/paddingmargin"
                            android:text="@string/savemail"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/colorWhite" />


                        <Button

                            android:id="@+id/btn_cancel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_weight="1"
                            android:background="@color/colorButton"
                            android:paddingLeft="@dimen/paddingmargin"
                            android:paddingRight="@dimen/paddingmargin"
                            android:text="@string/dialog_cancel"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>

        <com.rey.material.widget.ProgressView
            android:id="@+id/progress_bar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:visibility="gone"
            app:pv_autostart="true"
            app:pv_circular="true"
            app:pv_progressMode="indeterminate"
            app:pv_progressStyle="@style/Material.Drawable.CircularProgress" />

    </FrameLayout>
</RelativeLayout>